{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Accepted Risks",
  "description": "Schema for accepted risks that should be excluded from pre-release checks",
  "type": "object",
  "required": ["accepted"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "accepted": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["postmortem_id", "reason", "accepted_by", "accepted_at"],
        "properties": {
          "postmortem_id": {
            "type": "string",
            "pattern": "^PM-[0-9]{8}-[0-9]{3}$",
            "description": "Postmortem ID (e.g., PM-20260113-001)"
          },
          "pattern": {
            "type": "string",
            "description": "Optional: specific pattern to exclude (if not set, excludes entire postmortem)"
          },
          "reason": {
            "type": "string",
            "minLength": 10,
            "description": "Reason for accepting this risk"
          },
          "accepted_by": {
            "type": "string",
            "description": "Name or email of person who accepted the risk"
          },
          "accepted_at": {
            "type": "string",
            "format": "date",
            "description": "Date when risk was accepted (YYYY-MM-DD)"
          },
          "expires_at": {
            "type": "string",
            "format": "date",
            "description": "Optional: date when this acceptance expires and should be re-evaluated"
          }
        }
      }
    }
  }
}
